<head>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<div>
  <span>Image Slider</span>
</div>

<div class="slider">
  {% for block in section.blocks %}
    <div class="slide">
        <img src="{{block.settings.usr_img | img_url: '1000x200'}}" />
      </div>
    {% endfor %}
  </div>
  <div class="swiper-pagination"></div>
</div>

<!-- JavaScript code -->
<script>
  $(document).ready(function(){
    $('.slider').slick({
      autoplay: true,
      autoplaySpeed: 5000,
      speed: 1000,
      arrows: true,
    });
  });
  
</script>
<style>
  .slider {
  width: 80%;
  margin: 0 auto;
}

.slide img {
  width: 100%;
  height: auto;
}
</style>
{% schema %}
  {
    "name": "Image slider",
    "max_blocks": 10,
    "blocks": [
      {
        "type": "image",
        "name": "user Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "usr_img",
            "label": "img block"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image slider",
        "category": "Image Slider"
      }
    ]
  }
{% endschema %}