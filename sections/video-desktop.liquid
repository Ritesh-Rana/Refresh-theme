<div class="video-container">
  <div class="desktop-video">
    <iframe
      id="framevideo"
      src=""
      style="height: 600px; width:600px "></iframe>
  </div>
</div>

<script>
  var isMobile = navigator.userAgent.match(/(iPhone|iPod|iPad|Android|webOS|BlackBerry|IEMobile|Opera Mini)/i);
  let iframe = document.getElementById("framevideo");
  if (isMobile) {
    iframe.src = "https://www.youtube.com/embed/8Lka04vQyJ0?playlist=8Lka04vQyJ0&loop=1&autoplay=1&controls=1&showinfo=0&mute=1"
  } else {
    iframe.src = "https://www.youtube.com/embed/27UGBp5qkZY?playlist=27UGBp5qkZY&loop=1&autoplay=1&controls=1&showinfo=0&mute=1"
  }
</script>
<style>
  /* Style the video container */
  .video-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Style the video player */
  video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
