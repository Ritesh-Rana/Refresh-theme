    height: 100%;
    object-fit: cover;
  }

  /* Style the desktop video container */
  .desktop-video {
    display: none; /* Hide the desktop video by default */
  }

  /* Style the mobile video container */
  .mobile-video {
    display: none; /* Hide the mobile video by default */
  }

  /* Show the desktop video on large screens */
  @media(min-width: 992px) {
    .desktop-video {
      display: block;
    }
  }

  /* Show the mobile video on small screens */
  @media(max-width: 991px) {
    .mobile-video {
