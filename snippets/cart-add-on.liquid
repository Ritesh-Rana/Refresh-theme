<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  {% assign free_gift_over_price_30 = 100 %}
  {% assign variant_id = '44979149275425' %}
  $('input[type=number]').change(function(){
    var updateproductline = $(this).attr("line"),
        updateproductqty=$(this).val();
    fetch('/cart/change.js',{
      method: "POST",
      headers: { 'Content-Type': 'application/json'},
      body: JSON.stringify({ quantity: updateproductqty, line: updateproductline })
    }).then(()=>{
      setTimeout(function(){
      if( {{ cart.total_price | money_without_currency }}>=100 ){
        var params = {
        type: 'POST',
        url: '/cart/update.js',
        data: { updates: {  44979149275425  : 1 } },
        dataType: 'json',
      };
      $.ajax(params);
      }
      else{
        var params = {
        type: 'POST',
        url: '/cart/update.js',
        data: { updates: {  44979149275425  : 0 } },
        dataType: 'json',
      };
      $.ajax(params);
      }
      setTimeout(()=>{
        window.location.href = '/cart';
      },2000);
      },2000);
    });
  });
</script>
